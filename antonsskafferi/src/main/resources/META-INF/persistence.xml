<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default">
        <jta-data-source>jdbc/mysqlpool8</jta-data-source>
        <class>com.antonsskafferi.database.BooksEntity</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/payaraTest"/>
            <property name="jakarta.persistence.jdbc.user" value="noahServer"/>
            <property name="jakarta.persistence.jdbc.password" value="noah"/>
            <property name="toplink.jdbc.url" value="jdbc:mysql://localhost:3306/payaraTest"/>
            <property name="toplink.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="toplink.jdbc.user" value="noahServer"/>
            <property name="toplink.jdbc.password" value="noah"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/payaraTest"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="noahServer"/>
            <property name="hibernate.connection.password" value="noah"/>
            <property name="openjpa.ConnectionURL" value="jdbc:mysql://localhost:3306/payaraTest"/>
            <property name="openjpa.ConnectionDriverName" value="com.mysql.cj.jdbc.Driver"/>
            <property name="openjpa.ConnectionUserName" value="noahServer"/>
            <property name="openjpa.ConnectionPassword" value="noah"/>
            <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/payaraTest"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="eclipselink.jdbc.user" value="noahServer"/>
            <property name="eclipselink.jdbc.password" value="noah"/>
        </properties>
    </persistence-unit>
</persistence>
